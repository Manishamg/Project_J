pipeline {
    agent any

    environment {
        // Define environment variables if needed
        NODEJS_HOME = tool name: 'NodeJS', type: 'NodeJS'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub
                git 'https://github.com/Manishamg/Project_J.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('audit_client') {
                    // Install project dependencies
                    sh 'npm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('audit_client') {
                    // Build the project (e.g., using webpack or any other build tool)
                    sh 'npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('audit_client') {
                    // Run tests (if any)
                    sh 'npm test'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy the build to the web server
                sshagent(['SSH_GITHUB']) {
                    dir('audit_client/build') {
                        sh 'scp -r * ec2-user@54.198.204.77:/var/www/html/'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
